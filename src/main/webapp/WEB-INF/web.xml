    <servlet>
        <servlet-name>BooksPage</servlet-name>
        <jsp-file>/WEB-INF/book/books.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>BooksPage</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BooksPage</servlet-name>
        <url-pattern>/book_list</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
